<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1d1814">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/hero_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#1d1814">

            <TextView
                android:id="@+id/hero_item_items_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/items"
                android:textColor="#f3e6d0"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/hero_item_show_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="14dp"
                android:text="@string/view_details"
                android:textColor="@color/white"/>

            <View
                android:id="@+id/hero_item_items_title_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/hero_item_items_title"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:background="#312a1e"/>

            <RelativeLayout
                android:id="@+id/hero_item_items_layout"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hero_item_items_title_divider"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-12dp"
                android:paddingBottom="10dp">

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_head_bg"
                    android:layout_width="76dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:scaleType="fitXY"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_torso_bg"
                    android:layout_width="94dp"
                    android:layout_height="137dp"
                    android:layout_below="@+id/hero_item_head_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_waist_bg"
                    android:layout_width="94dp"
                    android:layout_height="42dp"
                    android:layout_below="@+id/hero_item_torso_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_legs_bg"
                    android:layout_width="76dp"
                    android:layout_height="104dp"
                    android:layout_below="@+id/hero_item_waist_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_feet_bg"
                    android:layout_width="76dp"
                    android:layout_height="106dp"
                    android:layout_below="@+id/hero_item_legs_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_shoulders_bg"
                    android:layout_width="76dp"
                    android:layout_height="106dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="59dp"
                    android:layout_toLeftOf="@+id/hero_item_head_bg"
                    android:scaleType="fitXY"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_hands_bg"
                    android:layout_width="76dp"
                    android:layout_height="106dp"
                    android:layout_below="@+id/hero_item_shoulders_bg"
                    android:layout_marginRight="47dp"
                    android:layout_marginTop="11dp"
                    android:layout_toLeftOf="@+id/hero_item_head_bg"
                    android:scaleType="fitXY"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_left_finger_bg"
                    android:layout_width="48dp"
                    android:layout_height="52dp"
                    android:layout_below="@+id/hero_item_hands_bg"
                    android:layout_marginRight="61dp"
                    android:layout_marginTop="13dp"
                    android:layout_toLeftOf="@+id/hero_item_head_bg"
                    android:scaleType="fitXY"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_main_hand_bg"
                    android:layout_width="76dp"
                    android:layout_height="156dp"
                    android:layout_below="@+id/hero_item_left_finger_bg"
                    android:layout_marginRight="47dp"
                    android:layout_marginTop="13dp"
                    android:layout_toLeftOf="@+id/hero_item_head_bg"
                    android:scaleType="fitXY"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_neck_bg"
                    android:layout_width="64dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="82dp"
                    android:layout_toRightOf="@+id/hero_item_head_bg"
                    android:scaleType="fitXY"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_bracers_bg"
                    android:layout_width="76dp"
                    android:layout_height="106dp"
                    android:layout_below="@+id/hero_item_neck_bg"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="26dp"
                    android:layout_toRightOf="@+id/hero_item_head_bg"
                    android:scaleType="fitXY"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_right_finger_bg"
                    android:layout_width="48dp"
                    android:layout_height="52dp"
                    android:layout_below="@+id/hero_item_hands_bg"
                    android:layout_marginLeft="61dp"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@+id/hero_item_head_bg"
                    android:scaleType="fitXY"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_off_hand_bg"
                    android:layout_width="76dp"
                    android:layout_height="156dp"
                    android:layout_below="@+id/hero_item_right_finger_bg"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@+id/hero_item_head_bg"
                    android:scaleType="fitXY"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_head"
                    android:layout_width="70dp"
                    android:layout_height="140dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_torso"
                    android:layout_width="80dp"
                    android:layout_height="160dp"
                    android:layout_below="@+id/hero_item_head_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-12dp"
                    android:scaleType="fitCenter"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_waist"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_below="@+id/hero_item_torso_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-12dp"
                    android:scaleType="fitCenter"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_feet"
                    android:layout_width="72dp"
                    android:layout_height="144dp"
                    android:layout_below="@+id/hero_item_legs_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-16dp"
                    android:scaleType="fitCenter"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_off_hand"
                    android:layout_width="76dp"
                    android:layout_height="152dp"
                    android:layout_below="@+id/hero_item_right_finger_bg"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/hero_item_head_bg"
                    android:scaleType="fitCenter"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_right_finger"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/hero_item_hands_bg"
                    android:layout_marginLeft="61dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/hero_item_head_bg"
                    android:scaleType="fitCenter"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_bracers"
                    android:layout_width="72dp"
                    android:layout_height="144dp"
                    android:layout_below="@+id/hero_item_neck_bg"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/hero_item_head_bg"
                    android:scaleType="fitCenter"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_left_finger"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/hero_item_hands_bg"
                    android:layout_marginRight="61dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@+id/hero_item_head_bg"
                    android:scaleType="fitCenter"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_main_hand"
                    android:layout_width="76dp"
                    android:layout_height="152dp"
                    android:layout_below="@+id/hero_item_left_finger_bg"
                    android:layout_marginRight="47dp"
                    android:layout_marginTop="16dp"
                    android:layout_toLeftOf="@+id/hero_item_head_bg"
                    android:scaleType="fitCenter"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_neck"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="84dp"
                    android:layout_toRightOf="@+id/hero_item_head_bg"
                    android:scaleType="fitCenter"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_legs"
                    android:layout_width="72dp"
                    android:layout_height="144dp"
                    android:layout_below="@+id/hero_item_waist_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-18dp"
                    android:scaleType="fitCenter"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_shoulders"
                    android:layout_width="72dp"
                    android:layout_height="144dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="40dp"
                    android:layout_toLeftOf="@+id/hero_item_head_bg"
                    android:scaleType="fitCenter"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_hands"
                    android:layout_width="72dp"
                    android:layout_height="144dp"
                    android:layout_below="@+id/hero_item_shoulders_bg"
                    android:layout_marginRight="47dp"
                    android:layout_marginTop="-5dp"
                    android:layout_toLeftOf="@+id/hero_item_head_bg"
                    android:scaleType="fitCenter"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hero_item_items_description_layout"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hero_item_items_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-12dp"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/hero_item_items_description_center_layout"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical">

                    <com.woozam.wdthelper.app.view.ItemBGView
                        android:id="@+id/hero_item_head_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"/>

                    <com.woozam.wdthelper.app.view.ItemBGView
                        android:id="@+id/hero_item_torso_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"/>

                    <com.woozam.wdthelper.app.view.ItemBGView
                        android:id="@+id/hero_item_waist_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"/>

                    <com.woozam.wdthelper.app.view.ItemBGView
                        android:id="@+id/hero_item_legs_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"/>

                    <com.woozam.wdthelper.app.view.ItemBGView
                        android:id="@+id/hero_item_feet_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hero_item_items_description_left_layout"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/hero_item_items_description_center_layout"
                    android:orientation="vertical">

                    <com.woozam.wdthelper.app.view.ItemBGView
                        android:id="@+id/hero_item_shoulders_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.woozam.wdthelper.app.view.ItemBGView
                        android:id="@+id/hero_item_hands_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"/>

                    <com.woozam.wdthelper.app.view.ItemBGView
                        android:id="@+id/hero_item_left_finger_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"/>

                    <com.woozam.wdthelper.app.view.ItemBGView
                        android:id="@+id/hero_item_main_hand_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hero_item_items_description_right_layout"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/hero_item_items_description_center_layout"
                    android:orientation="vertical">

                    <com.woozam.wdthelper.app.view.ItemBGView
                        android:id="@+id/hero_item_neck_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.woozam.wdthelper.app.view.ItemBGView
                        android:id="@+id/hero_item_bracers_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"/>

                    <com.woozam.wdthelper.app.view.ItemBGView
                        android:id="@+id/hero_item_right_finger_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"/>

                    <com.woozam.wdthelper.app.view.ItemBGView
                        android:id="@+id/hero_item_off_hand_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/hero_item_jewel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hero_item_items_description_layout"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/jewel"
                android:textColor="#f3e6d0"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/hero_item_jewel_title_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/hero_item_jewel_title"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:background="#312a1e"/>

            <RelativeLayout
                android:id="@+id/hero_item_jewel_layout"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hero_item_jewel_title_divider"
                android:layout_centerHorizontal="true"
                android:paddingBottom="18dp"
                android:paddingTop="18dp">

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_jewel_1_bg"
                    android:layout_width="48dp"
                    android:layout_height="52dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:scaleType="fitXY"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_jewel_1"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/hero_item_jewel_1_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/hero_item_jewel_1_bg"
                    android:layout_alignRight="@+id/hero_item_jewel_1_bg"
                    android:layout_below="@+id/hero_item_jewel_1_bg"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#a99877"
                    android:textSize="16sp"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_jewel_2_bg"
                    android:layout_width="48dp"
                    android:layout_height="52dp"
                    android:layout_toLeftOf="@+id/hero_item_jewel_1_bg"
                    android:scaleType="fitXY"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_jewel_2"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/hero_item_jewel_1"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/hero_item_jewel_2_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/hero_item_jewel_2_bg"
                    android:layout_alignRight="@+id/hero_item_jewel_2_bg"
                    android:layout_below="@+id/hero_item_jewel_2_bg"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#a99877"
                    android:textSize="16sp"/>

                <com.woozam.wdthelper.app.view.ItemBGView
                    android:id="@+id/hero_item_jewel_3_bg"
                    android:layout_width="48dp"
                    android:layout_height="52dp"
                    android:layout_toRightOf="@+id/hero_item_jewel_1_bg"
                    android:scaleType="fitXY"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_jewel_3"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/hero_item_jewel_1"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/hero_item_jewel_3_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/hero_item_jewel_3_bg"
                    android:layout_alignRight="@+id/hero_item_jewel_3_bg"
                    android:layout_below="@+id/hero_item_jewel_3_bg"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#a99877"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/hero_item_kanai_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hero_item_jewel_layout"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/kanai_s_cube_powers"
                android:textColor="#f3e6d0"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/hero_item_kanai_title_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/hero_item_kanai_title"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:background="#312a1e"/>

            <RelativeLayout
                android:id="@+id/hero_item_kanai_layout"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hero_item_kanai_title_divider"
                android:layout_centerHorizontal="true"
                android:paddingBottom="18dp"
                android:paddingTop="18dp">

                <ImageView
                    android:id="@+id/hero_item_kanai_armor_bg"
                    android:layout_width="90dp"
                    android:layout_height="148dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:background="@mipmap/bg_armor_empty"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_kanai_armor"
                    android:layout_width="48dp"
                    android:layout_height="96dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"/>

                <ImageView
                    android:id="@+id/hero_item_kanai_weapon_bg"
                    android:layout_width="90dp"
                    android:layout_height="148dp"
                    android:layout_toLeftOf="@+id/hero_item_kanai_armor_bg"
                    android:background="@mipmap/bg_weapon_empty"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_kanai_weapon"
                    android:layout_width="48dp"
                    android:layout_height="96dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="21dp"
                    android:layout_toLeftOf="@+id/hero_item_kanai_armor_bg"
                    android:scaleType="fitCenter"/>

                <ImageView
                    android:id="@+id/hero_item_kanai_jewelry_bg"
                    android:layout_width="90dp"
                    android:layout_height="148dp"
                    android:layout_toRightOf="@+id/hero_item_kanai_armor_bg"
                    android:background="@mipmap/bg_jewelry_empty"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/hero_item_kanai_jewelry"
                    android:layout_width="48dp"
                    android:layout_height="96dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="21dp"
                    android:layout_toRightOf="@+id/hero_item_kanai_armor_bg"
                    android:scaleType="fitCenter"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>