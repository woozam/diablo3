<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1d1814">

    <RelativeLayout
        android:id="@+id/hero_skill_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1d1814"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/hero_skill_active_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/active"
            android:textColor="#f3e6d0"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/hero_skill_active_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/hero_skill_active_title"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="#312a1e"/>

        <LinearLayout
            android:id="@+id/hero_skill_active_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hero_skill_active_divider"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <com.woozam.wdthelper.app.view.SkillActiveItem
                android:id="@+id/hero_skill_active_mouse_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                app:position="left"/>

            <com.woozam.wdthelper.app.view.SkillActiveItem
                android:id="@+id/hero_skill_active_mouse_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                app:position="right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hero_skill_active_line_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hero_skill_active_line_1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <com.woozam.wdthelper.app.view.SkillActiveItem
                android:id="@+id/hero_skill_active_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                app:position="1"/>

            <com.woozam.wdthelper.app.view.SkillActiveItem
                android:id="@+id/hero_skill_active_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                app:position="2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hero_skill_active_line_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hero_skill_active_line_2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <com.woozam.wdthelper.app.view.SkillActiveItem
                android:id="@+id/hero_skill_active_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                app:position="3"/>

            <com.woozam.wdthelper.app.view.SkillActiveItem
                android:id="@+id/hero_skill_active_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                app:position="4"/>
        </LinearLayout>

        <TextView
            android:id="@+id/hero_skill_passive_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hero_skill_active_line_3"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/passive"
            android:textColor="#f3e6d0"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/hero_skill_passive_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/hero_skill_passive_title"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="#312a1e"/>

        <LinearLayout
            android:id="@+id/hero_skill_passive_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hero_skill_passive_divider"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <com.woozam.wdthelper.app.view.SkillPassiveItem
                android:id="@+id/hero_skill_passive_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"/>

            <com.woozam.wdthelper.app.view.SkillPassiveItem
                android:id="@+id/hero_skill_passive_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hero_skill_passive_line_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hero_skill_passive_line_1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <com.woozam.wdthelper.app.view.SkillPassiveItem
                android:id="@+id/hero_skill_passive_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"/>

            <com.woozam.wdthelper.app.view.SkillPassiveItem
                android:id="@+id/hero_skill_passive_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>