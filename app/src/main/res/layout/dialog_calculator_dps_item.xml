<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="16dp">

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/calculator_dps_item_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_edit_text_selector"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <include
        android:id="@+id/calculator_dps_item_row_1"
        layout="@layout/row_calculator_dps"/>

    <include
        android:id="@+id/calculator_dps_item_row_2"
        layout="@layout/row_calculator_dps"/>

    <include
        android:id="@+id/calculator_dps_item_row_3"
        layout="@layout/row_calculator_dps"/>

</LinearLayout>