<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#ff12110f">

    <RelativeLayout
        android:id="@+id/bonus_bounty_order_left_layout"
        android:layout_width="80dp"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/bonus_bounty_order_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ad835a"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/white_60"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/bonus_bounty_order_content"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_toRightOf="@+id/bonus_bounty_order_left_layout"
        android:gravity="center"
        android:textColor="#a99877"
        android:textSize="14dp"
        android:textStyle="bold"/>

</RelativeLayout>