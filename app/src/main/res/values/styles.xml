<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:progressBarStyle">@style/D3Progress</item>
        <item name="progressBarStyle">@style/D3Progress</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>

        <item name="md_title_color">#f3e6d0</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="RHListView" parent="android:Widget.ListView">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#00000000</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">#00000000</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:progressBarStyle">@style/D3Progress</item>
        <item name="progressBarStyle">@style/D3Progress</item>
        <item name="android:textColor">#f3e6d0</item>
        <item name="android:textColorPrimary">#757575</item>
    </style>

    <style name="TooltipDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:progressBarStyle">@style/D3Progress</item>
        <item name="progressBarStyle">@style/D3Progress</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:progressBarStyle">@style/D3Progress</item>
        <item name="progressBarStyle">@style/D3Progress</item>
    </style>

    <style name="D3Progress" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/d3_progress</item>
    </style>


</resources>
